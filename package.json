{
  "name": "nmscd.web",
  "version": "1.0.3",
  "scripts": {
    "build": "npm-run-all --sequential live:* sass:* template:*",
    "setup": "npm i && npm run setup:live-template",
    "setup:live-template": "npm-run-all --sequential live:*",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:watch-template": "nodemon -e hbs -x \"npm-run-all template:*\"",
    "dev:watch-sass": "nodemon -e scss -x \"npm-run-all sass:*\"",
    "dev:live-server": "alive-server --mount=/:./public --watch=./public",
    "live:main": "node template/node/generateLiveJson.js",
    "template:main": "node template/node/buildTemplate.js",
    "sass:main": "sass template/scss/main.scss ./public/assets/css/main.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NMSCD/NMSCD.github.io.git"
  },
  "bugs": {
    "url": "https://github.com/NMSCD/NMSCD.github.io/issues"
  },
  "homepage": "https://nmscd.com",
  "author": "Kurt Lourens",
  "license": "ISC",
  "devDependencies": {
    "alive-server": "^1.3.0",
    "concurrently": "^8.2.0",
    "dotenv": "^16.2.0",
    "handlebars": "^4.7.7",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "sass": "^1.43.4"
  }
}